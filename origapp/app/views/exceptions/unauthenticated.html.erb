<h3>Login</h3>

<% if params[:exception] && !params[:exception].message.blank? -%>
  <p class="error"><%= params[:exception].message -%></p>
<% end -%>

<form action="/sessions/update" method="POST" accept-charset="utf-8">
  <div class="formRow">
    <label>Login <input type="text" name="login" value="" id="login"></label>
  </div> <!-- close: formRow -->
  <div class="formRow">
    <label>Password <input type="password" name="password" value="" id="password"></label>
  </div> <!-- close: formRow -->
  <div class="formRow">
    <input type="submit" name="Submit" value="Log In" id="Submit">
  </div> <!-- close: formRow -->
</form>
